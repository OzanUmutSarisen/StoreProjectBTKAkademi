@model IEnumerable<IdentityUser>

<div class="text-center">
    <div class="display-6">Users</div>
</div>
<div class="d-flex justify-content-end my-3">
    <a asp-action="Create" class="btn btn-outline-success">
        <i class="fa-solid fa-plus"></i>
        Add User
    </a>
</div>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Roles</th>
            <th>Opretaions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td user-name="@user.UserName" user-role="" ></td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@user.UserName">
                            <i class="fa fa-solid fa-edit"></i>
                            Edit</a>
                        <a class="btn btn-info" asp-action="ResetPassword" asp-route-id="@user.UserName">
                            <i class="fa fa-solid fa-edit"></i>
                            Resert Password</a>
                        <form asp-action="DeleteOneUser" method="post">
                            <input type="hidden" name="UserName" value="user.UserName" />
                            <button type="submit" class="btn btn-danger rounded-start-0 rounded-end-2">
                                <i class="fa fa-solid fa-trash"></i>
                                Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>